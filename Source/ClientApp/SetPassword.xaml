<Window x:Class="ClientApp.SetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="{DynamicResource m_app_PassHeader}" Height="150" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock FontSize="20" TextAlignment="Center" Margin="5" Text="{DynamicResource m_app_PassBlockHeader}"/>
        <PasswordBox Name="PassBoxCert" HorizontalAlignment="Center" Margin="5" Width="250" Height="30" VerticalContentAlignment="Center" FontSize="20" KeyDown="PassBoxCert_OnKeyDown"/>
        <Button Name="CertButton" Margin="5" HorizontalAlignment="Center" Content="OK" FontSize="15" Height="30" Width="90" Click="CertButton_OnClick" />
    </StackPanel>
</Window>
