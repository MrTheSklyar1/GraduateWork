<Window x:Class="AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Height="30" Header="First">First</TabItem>
            <TabItem Height="30" Header="Second">Second</TabItem>
        </TabControl>
        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                <Menu Background="{x:Null}">
                    <MenuItem x:Name="menuLanguage" Header="{DynamicResource m_menu_Language}" />
                </Menu>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
