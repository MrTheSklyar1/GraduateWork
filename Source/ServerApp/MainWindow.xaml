<Window x:Class="ServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Window.Content>
        <TextBox TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Background="Black" Foreground="White" FontSize="14" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" IsReadOnly="True"/>
    </Window.Content>
</Window>
